<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApproxiMATE.StartupPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="Welcome to ApproxiMATE!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="ButtonPermission" Text="Check Permissions" Clicked="ButtonPermission_OnClicked" />
            <Button x:Name="ButtonLocation" Text="Get Location" Clicked="ButtonLocation_OnClicked" />
            <Label x:Name="LabelGeolocation" Text="Location Displayed Here" />
            <Button x:Name="ButtonOpenMap" Text="Open Map" Clicked="ButtonOpenMap_OnClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>